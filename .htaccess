RewriteEngine On
# Base directory - change based on environment:
# Local: RewriteBase /core1/
# Production (CyberPanel): RewriteBase /
RewriteBase /

# Set default directory index
DirectoryIndex index.php

# Disable directory browsing
Options -Indexes

# Security headers
<IfModule mod_headers.c>
    Header always set X-Frame-Options DENY
    Header always set X-Content-Type-Options nosniff
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# Redirect root to public/index.php (commented out to allow landing page)
# RewriteRule ^$ public/index.php [L]

# Allow direct access to public/assets/
RewriteRule ^public/assets/(.*)$ public/assets/$1 [L]

# Allow access to backend/api/ for AJAX requests
RewriteRule ^backend/api/(.*)$ backend/api/$1 [L,QSA]

# Handle .php files in public directory
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^(.*)$ public/$1 [L]

# Block access to sensitive files
<FilesMatch "\.(env|git|gitignore|htaccess|htpasswd|log|tmp)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Block access to backend files (except API)
RewriteCond %{REQUEST_URI} ^/backend/
RewriteCond %{REQUEST_URI} !^/backend/api/
RewriteRule ^ - [F,L]
