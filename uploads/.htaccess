# Prevent PHP execution in uploaded files
# This is a critical security measure

<Files "*.php">
    Order Deny,Allow
    Deny from all
</Files>

<Files "*.php3">
    Order Deny,Allow
    Deny from all
</Files>

<Files "*.php4">
    Order Deny,Allow
    Deny from all
</Files>

<Files "*.php5">
    Order Deny,Allow
    Deny from all
</Files>

<Files "*.phtml">
    Order Deny,Allow
    Deny from all
</Files>

# Prevent access to .htaccess files
<Files ".htaccess">
    Order Allow,Deny
    Deny from all
</Files>

# Prevent directory listing
Options -Indexes

# Prevent access to backup files
<FilesMatch "\.(bak|backup|old|orig|tmp|temp)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>
